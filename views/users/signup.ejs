<% layout('/layouts/boilerplate.ejs') %>

<div class="row mt-3">
  <div class="col-10 col-sm-9 col-lg-6 offset-lg-3 offset-sm-2">
    <h2>
      &nbsp;&nbsp;SignUp on <span style="color: #ee3844">Wanderhaven</span>
    </h2>
    <form
      action="/signup"
      method="POST"
      class="needs-validation mt-3 ms-3"
      novalidate
    >
      <div class="mb-3 mt-4">
        <label for="username" class="form-label mb-0">Username</label>
        <input
          name="username"
          placeholder="Enter Username"
          type="text"
          required
          class="form-control"
        />
        <div class="invalid-feedback">Username is required</div>
      </div>

      <div class="mb-3">
        <label for="email" class="form-label mb-0">Email</label>
        <input
          name="email"
          placeholder="Enter your Email"
          type="email"
          required
          class="form-control"
        />
        <div class="invalid-feedback">Email address is required</div>
      </div>

      <div>
        <label for="password" class="form-label mb-0">Password</label>
        <input
          name="password"
          placeholder="Enter your Password"
          type="password"
          required
          class="form-control"
        />
        <div class="invalid-feedback">Password is required</div>
      </div>
      <br />
      <button class="btn btn-success" style="width: 7rem; border: none">
        SignUp
      </button>
    </form>
  </div>
</div>
